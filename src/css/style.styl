@import './fonts.styl';

body {
  font-family: 'Merriweather', 'Georgia', 'Times New Roman', Times, serif;
}

h1, h2, h3, h4, h5, h6 {
  // font-family: 'Raleway', Helvetica, Arial, sans-serif;
}

h2 {
  margin: 25px 0 25px;
  font-family: Merriweather;
  font-weight: normal;
  color: #D9D9D9;
  font-size: 40px;
}

p {
  margin: 0 0 10px;
  line-height: 30px;
  font-size: 17px;
}

.wrapper {
  padding: 20px 0 50px;
  display: grid;
  grid-template-columns: 1fr minmax(auto, 400px) 1fr;
  grid-gap: 10px;
}

.grid-center {
  grid-column: 2 / 3;
  grid-row: 1;
}