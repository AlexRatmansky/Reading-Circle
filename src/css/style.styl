@import './fonts.styl';

body {
  font-family: 'Merriweather', 'Georgia', 'Times New Roman', Times, serif;
}

.wrapper {
  padding: 20px 0 50px;
  display: grid;
  grid-template-columns: 1fr minmax(auto, 960px) 1fr;
  grid-gap: 10px;
}

.grid-center {
  grid-column: 2 / 3;
  grid-row: 1;
}

h1, h2, h3, h4, h5, h6 {
  // font-family: 'Raleway', Helvetica, Arial, sans-serif;
}

h2 {
  margin: 25px 0 25px;
  font-family: 'Merriweather', 'Georgia', 'Times New Roman', Times, serif;
  font-weight: normal;
  color: #D9D9D9;
  font-size: 40px;
}

p {
  margin: 0 0 10px;
  line-height: 30px;
  font-size: 17px;
  font-weight: normal;
}

header {
  display: grid;
  grid-template-columns: 1fr minmax(auto, 700px) 1fr;
  grid-gap: 0;

  margin-bottom: 100px;

  h1, h2, p, div {
    grid-column: 2;
  }
}

.intro, .conclusion {
  font-weight: normal;
  font-size: 24px;
  line-height: 39px;
}

.source {
  font-family: 'Raleway', Helvetica, Arial, sans-serif;
  font-weight: normal;
  font-size: 17px;
  line-height: 28px;
  text-align: right;
  color: #B8B8B8;
}

.content-wrapper {
  display: grid;
  grid-template-columns: 1fr minmax(auto, 700px) 1fr;
  grid-gap: 0;

  p, h1, h2, ol, ul, hr, section {
    grid-column: 2;
  }

  h1 {
    font-weight: normal;
    font-size: 37px;
    line-height: 65px;
    text-align: center;

    .date {
      text-transform: uppercase;
    }
  }

  .intro, .conclusion {
    grid-column-start: 1;
    grid-column-end: 4;
  }
}

