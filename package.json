{
  "name": "reading-circle",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "node ./bin/www",
    "build": "npm run copy-static-assets && npm run build-stylus && npm run build-ts && npm run tslint",
    "build-stylus": "stylus src/css/style.styl -o dist/css/style.css",
    "watch-stylus": "stylus -w src/css/style.styl -o dist/css/style.css",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon ./bin/www",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "clear": "rm -rf node_modules package-lock.json dis",
    "make-static-dir": "mkdir -p dist/css/",
    "copy-static": "cp -R src/public/* dist",
    "copy-static-assets": "npm run make-static-dir && npm run copy-static",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Stylus,TypeScript,Node\" -c \"red.bold,blue.bold,green.bold\" \"npm run watch-stylus\" \"npm run watch-ts\" \"npm run watch-node\"",
    "dev": "npm run build && npm run watch",
    "prod": "npm run clear && npm i && npm run build"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.17.0",
    "@types/js-yaml": "^3.12.1",
    "@types/markdown-it": "0.0.8",
    "@types/morgan": "^1.7.36",
    "@types/serve-favicon": "^2.2.30",
    "@types/shelljs": "^0.8.5",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "enquirer": "^2.3.1",
    "express": "^4.17.1",
    "hyphenation.ru": "^0.2.1",
    "hypher": "^0.2.5",
    "js-yaml": "^3.13.1",
    "markdown-it": "^9.0.1",
    "markdown-it-decorate": "^1.2.2",
    "markdown-it-footnote": "^3.0.2",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pug": "^2.0.4",
    "serve-favicon": "^2.5.0",
    "shelljs": "^0.8.2",
    "stylus": "^0.54.5",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typograf": "^6.8.2"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  }
}
